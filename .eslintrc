{
  "extends": [
    "airbnb-base", 
    "plugin:react/recommended"
  ],
  "rules": {
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "import/no-extraneous-dependencies": 0,
    "no-param-reassign": [2, { "props": false }],
    "max-len": ["warn", { "code": 120 }],
    "function-paren-newline": ["error", "consistent"],
    "no-shadow": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.3.2"
    }
  }
}
